<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.CodeApp" parent="android:Theme.Material.Light.NoActionBar">
        <item name="windowSplashScreenBackground">@color/gray_333</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/new_launcher_icon</item>
        <item name="windowSplashScreenAnimationDuration">1000</item>
    </style>

    <style name="Theme.CodeApp.Splash" parent="Theme.CodeApp">
        <item name="android:windowBackground">@color/gray_333</item>
        <item name="windowSplashScreenBackground">@color/gray_333</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/new_launcher_icon</item>
    </style>

    <!-- Transparent theme to bypass system splash -->
    <style name="Theme.Transparent" parent="Theme.CodeApp">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
    </style>

</resources>